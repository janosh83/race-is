{% extends 'base.html.twig' %}

{% block title %}{{peak.title}}{% endblock %}

{% block main %}

<div>
    <h1>{{peak.shortid}}: {{peak.title}}</h1>
    <p><strong>Latitude: </strong> {{peak.latitude}}</p>
    <p><strong>Longitude: </strong> {{peak.longitude}}</p>
    <p><strong>Počet bodů: </strong> {{peak.pointsPerVisit}}</p>
    <div>{{peak.description}}</div>
</div>

<table class="table table-striped">
    <tr>
        <th scope="col">Tým</th>
        <th scope="col">Čas</th>
        <th scope="col">Poznámka</th>
    </tr>
    {% for visit in visits %}
    <tr scope="row">
        <td>{{visit.team_title}}</td>
        <td>{{visit.time|date('d.m.Y H:i:s')}}</td>
        <td>{% if visit.note %}
                {{visit.note|sanitize_html}}
            {% endif %}
        </td>
    </tr>
    {% endfor %}
</table>

<p><a href="{{ path('admin_race_results', {raceid:race.id}) }}">Zpět na výsledky</a></p>

{% endblock %}