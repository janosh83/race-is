{% extends 'base.html.twig' %}

{% block title %}Přihlášení{% endblock %}

{% block main %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Jste přihlášeni jako {{ app.user.email }}, <a href="{{ path('app_logout') }}">Odhlásit</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 mt-3 font-weight-normal">Přihlášení</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    <label for="inputPassword">Heslo</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"
    <label><input type="checkbox" name="_remember_me"> Remember me</label>

    <div><button class="btn btn-primary mb-3 mt-3" type="submit">Přihlásit</button></div>
</form>

<a href="{{path('app_forgot_password_request')}}">Zapomenuté heslo</a>
{% endblock %}
