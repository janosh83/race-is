{% extends 'base.html.twig' %}

{% block title %}{{peak.title}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{peak.shortid}}: {{peak.title}}</h1>
    <p><strong>Latitude: </strong> {{peak.latitude}}</p>
    <p><strong>Longitude: </strong> {{peak.longitude}}</p>
    <div>{{peak.description}}</div>
</div>

<div>
{{ form_start(form) }}
{{ form_widget(form.peak_id, {'value': peak.id})}}
{{ form_widget(form.team_visited, {'value': app.user.username})}}


{{ form_end(form) }}
</div>

<div><a href="{{ path('all_peaks')}}">Zpět na seznam vrcholů</a></div>
{% endblock %}
