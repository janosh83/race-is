{% extends 'base.html.twig' %}

{% block title %}{{race.title}}{% endblock %}

{% block body %}

<div>
<a href="{{ path('all_races')}}">Race index</a>

<h1>{{race.title}}</h1>
<p>{{race.description}}</p>

<div>User role
{% if teamWhereLeader %}
    <b>Leader</b> in team: {{ teamWhereLeader.title }}
{% endif %}

{% if teamWhereMember %}
    <b>Member</b> in team {{ teamWhereMember.title }}
{% endif %}
</div>

<div></din>
<h2>Vrcholy</h2>

<ul>
    {% for peak in peaks %}
        <li><a href="{{ path('peak_show', {id:peak.id}) }}">{{peak.title}}</a></li>
    {% endfor %}
</ul>

<h3>Visited</h3>
<ul>
    {% for vp in visitedPeaks %}
        <li><a href="{{ path('peak_show', {id:vp.id}) }}">{{vp.title}}</a></li>
    {% endfor %}
</ul>

</div>

{% endblock %}